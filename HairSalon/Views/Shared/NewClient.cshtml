@using HairSalonApp.Models;
@{
  Layout = "_Layout";
}
        <h1>Enter a new Client</h1>


      <form action="/clients" method="post">
				<label for="clientName">Name: </label>
				<input type="text" name="clientName" required>
        <hr>
        <label for="clientNumber">Phone Number: </label>
				<input type="text" name="clientNumber" required>
				<hr>
				<label for="assignedStylist">Assign to Stylist:</label>
				<select name="assignedStylist" required>

						@foreach (var stylist in Model)
						{
							<option value="@stylist.GetId()">@stylist.GetName()</option>
						}

				</select>
        <hr>
        <button type="submit" class="btn btn-info" name="addClient">Add Client</button>

      </form>
